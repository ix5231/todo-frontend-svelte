{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "#root/*": [
        "*"
      ],
      "#src/*": [
        "src/*"
      ],
      "#api": [
        "src/api"
      ],
      "#components/*": [
        "src/components/*"
      ],
      "#utils": [
        "src/utils"
      ],
      "#test-helpers": [
        "src/testHelpers"
      ],
    },
    "resolveJsonModule": true
  }
}